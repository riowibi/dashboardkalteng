<!DOCTYPE html>
<html>
<head>
	<title>Dashboard</title>
	<%= csrf_meta_tags %>

	<%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
	<%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
</head>

<body>
	<div class="container">
		<div>
			<%= flash[:notice] %><br>
			<b>Total Data Witel Kalteng :</b> <%= Order.count %><br>
			<b>Today :</b> <%= Date.today %>
		</div>
		<hr>
		<br>
		<%= render(:partial => "dashboard1") %>
		<%= render(:partial => "dashboard2") %>
		<br><br>	
		<hr>		
		<div class="row">
			<div class="col-md-6">
				<h4>Import data</h4>

				<%= link_to "Import Starclick", starclick_url %> |
				<%= link_to "Combine to MS2N", ms2n_url %>

				<h4>Export Data</h4>
				Download:
				<%= link_to "CSV", orders_path(format: "csv") %> |
				<%= link_to "Excel", orders_path(format: "xls") %>
			</div>

			<div class="col-md-6" style="margin-bottom: 100px">
				<%= form_tag import_orders_path, multipart: true do %>
				<%= file_field_tag :file %>
				<%= submit_tag "Import" %>
				<% end %>
			</div>
		</div>	
	</div>
</body>
</html>

